<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana3.Ejercicio">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Calificaciones"
               FontSize="20"
                   TextColor="Red"
                HorizontalOptions="Center" />
            <Label Text="Parcial 1"
               FontSize="12"
                   TextColor="Aqua"
                HorizontalOptions="Center" />
            <Entry x:Name="txtNota1" Placeholder="Nota Seguimiento" Keyboard="Numeric"
                   />
            <Entry x:Name="txtExamen1" Placeholder="Examen" Keyboard="Numeric"
                   />
            <Label Text="Parcial 2"
               FontSize="12"
                   TextColor="Aqua"
                HorizontalOptions="Center" />

            <Entry x:Name="txtNota2"  Placeholder="Nota Seguimiento" Keyboard="Numeric"
                   />
            <Entry x:Name="txtExamen2" Placeholder="Examen" Keyboard="Numeric"
                   />

            <Entry x:Name="txtResultado" IsEnabled="false"
                   />

            <Button x:Name="btnCalcular" Text="Calcular"
                    Clicked="btnCalcular_Clicked"
                    />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>