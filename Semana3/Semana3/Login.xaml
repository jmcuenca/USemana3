<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana3.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Login"
                VerticalOptions="Center" 
                 />
            <Entry x:Name="txtUsuario" Placeholder="Usuario"
                   FontSize="12"
                   />
            <Entry x:Name="txtClave" Placeholder="Contraseña" IsPassword="True"         FontSize="12"
                   />
            <Button x:Name="btnIngresar" Text="Ingresar" Clicked="btnIngresar_Clicked"                    
                    />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>